{
  "manifest_version": 3,
  "version": "1.0",
  "name": "__MSG_appName__",
  "short_name": "__MSG_appShortName__",
  "description": "__MSG_appDesc__",
  "default_locale": "en",
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
},
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "assets/img/icon-16x16.png",
    "48": "assets/img/icon-48x48.png",
    "128": "assets/img/icon-128x128.png"
  },
  "permissions": [
    "scripting",
    "activeTab",
    "notifications",
    "tabs",
    "bookmarks",
    "cookies",
    "storage",
    "identity",
    "nativeMessaging"
  ]
}